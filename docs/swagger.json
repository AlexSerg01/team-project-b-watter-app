{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Water app",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of water app"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    },
    {
      "url": "https://example.com/api/v1"
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Endpoints related to user authentication"
    },
    {
      "name": "user",
      "description": "Endpoints related to information about user"
    },
    {
      "name": "water",
      "description": "Endpoints related to information about water consumption"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Register a user",
        "operationId": "registerUser",
        "description": "Register a user in water app",
        "security": [
          {}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "waterAppUser@mail.com"
                  },
                  "password": {
                    "description": "password",
                    "type": "string",
                    "example": "password",
                    "minLength": 8,
                    "maxLength": 64
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully registered a user!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered a user!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/userCreatedByRegistrationResponse"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "$ref": "#/components/responses/409"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Login user",
        "operationId": "loginUser",
        "description": "Login a user and create a session",
        "security": [
          {}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "test@mail.com"
                  },
                  "password": {
                    "description": "User's password",
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged in an user!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully logged in an user!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/loggedInObjResponse"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Logout a user",
        "operationId": "logoutUser",
        "description": "Logout a user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully logged out a user!",
            "content": {}
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user/info": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get information about the user",
        "operationId": "getUserInfo",
        "description": "Get information about user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found a user!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found a user!"
                    },
                    "data": {
                      "type": "object",
                      "allOf": [
                        {
                          "$ref": "#/components/schemas/userGetAndPatchResponse"
                        }
                      ],
                      "required": [
                        "email",
                        "createdAt",
                        "updatedAt"
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user/userPhoto": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Add a photo to a user",
        "operationId": "patchUserPhoto",
        "description": "Add a photo to a user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "userPhoto": {
                    "description": "User's photo",
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Photo has been added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Photo has been added successfully"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/photoAddedResponse"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user/updateInfo": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Update info about a user",
        "operationId": "patchUserInfo",
        "description": "Update an info about a user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "User's name",
                    "type": "string",
                    "example": "John Doe"
                  },
                  "password": {
                    "description": "User's password",
                    "type": "string",
                    "example": "password"
                  },
                  "email": {
                    "description": "Users's email",
                    "type": "string",
                    "example": "test@mail.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User has been updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "User has been updated successfully"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/userGetAndPatchResponse"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user/newDailyWaterIntake": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Update info about a user's daily norm of water",
        "operationId": "patchUserInfoAboutWaterNorm",
        "description": "Update an info about a user norm of water per day",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dailyWaterIntake": {
                    "description": "User's water norm per day",
                    "type": "string",
                    "example": "15000"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Daily water intake has been successfully updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Daily water intake has been successfully updated"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/dailyWaterIntakeUpdatedResponse"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "userCreatedByRegistrationResponse": {
        "type": "object",
        "required": [
          "email",
          "_id",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "test@hmail.com"
          },
          "_id": {
            "description": "User's id",
            "type": "string",
            "example": "66b750163beb29c60d215f8c"
          },
          "createdAt": {
            "description": "When a user has been created at",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-10T11:33:42.181Z"
          },
          "updatedAt": {
            "description": "When a user has been updated at",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-10T11:33:42.181Z"
          }
        }
      },
      "loggedInObjResponse": {
        "type": "object",
        "required": [
          "accessToken"
        ],
        "properties": {
          "accessToken": {
            "description": "Access token",
            "type": "string",
            "example": "65e4decdd286b30065d54af965e4decdd286b30065d54af965e4decdd286b30065d54af9"
          }
        }
      },
      "userGetAndPatchResponse": {
        "type": "object",
        "required": [
          "email",
          "_id",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "test@hmail.com"
          },
          "_id": {
            "description": "User's id",
            "type": "string",
            "example": "66b750163beb29c60d215f8c"
          },
          "photo": {
            "description": "User's photo",
            "type": "string",
            "example": "https://cloudinary.com/images/3235235425-23423523"
          },
          "dailyWaterIntake": {
            "description": "Norm of water per day",
            "type": "number",
            "example": 14000
          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Alex Lex"
          },
          "createdAt": {
            "description": "When a user has been created at",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-10T11:33:42.181Z"
          },
          "updatedAt": {
            "description": "When a user has been updated at",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-10T11:33:42.181Z"
          }
        }
      },
      "photoAddedResponse": {
        "type": "object",
        "required": [
          "photoUrl"
        ],
        "properties": {
          "photoUrl": {
            "description": "User's photo",
            "type": "string",
            "example": "https://cloudinary.com/images/3235235425-23423523"
          }
        }
      },
      "dailyWaterIntakeUpdatedResponse": {
        "type": "object",
        "required": [
          "dailyWaterIntake"
        ],
        "properties": {
          "dailyWaterIntake": {
            "description": "User's water norm",
            "type": "number",
            "example": 14000
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "Unauthorized"
                },
                "data": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "Not found"
                },
                "data": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "409": {
        "description": "Email in use",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 409
                },
                "message": {
                  "type": "string",
                  "example": "Email in use"
                },
                "data": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}