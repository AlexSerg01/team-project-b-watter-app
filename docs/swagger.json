{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Water app",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is a documentation of water app"
  },
  "servers": [
    {
      "url": "https://team-project-b-watter-app.onrender.com"
    },
    {
      "url": "http://localhost:14000"
    }
  ],
  "tags": [
    {
      "name": "auth",
      "description": "Endpoints related to user authentication"
    },
    {
      "name": "user",
      "description": "Endpoints related to information about user"
    },
    {
      "name": "water",
      "description": "Endpoints related to information about water consumption"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Register a user",
        "operationId": "registerUser",
        "description": "Register a user in water app",
        "security": [
          {}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "waterAppUser@mail.com"
                  },
                  "password": {
                    "description": "password",
                    "type": "string",
                    "example": "password",
                    "minLength": 8,
                    "maxLength": 64
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully registered a user!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered a user!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/userCreatedByRegistrationResponse"
                    }
                  }
                }
              }
            }
          },
          "409": {
            "$ref": "#/components/responses/409"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Login user",
        "operationId": "loginUser",
        "description": "Login a user and create a session",
        "security": [
          {}
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "description": "User's email",
                    "type": "string",
                    "example": "test@mail.com"
                  },
                  "password": {
                    "description": "User's password",
                    "type": "string",
                    "example": "password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully logged in an user!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully logged in an user!"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/loggedInObjResponse"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "auth"
        ],
        "summary": "Logout a user",
        "operationId": "logoutUser",
        "description": "Logout a user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "204": {
            "description": "Successfully logged out a user!",
            "content": {}
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user/info": {
      "get": {
        "tags": [
          "user"
        ],
        "summary": "Get information about the user",
        "operationId": "getUserInfo",
        "description": "Get information about user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found a user!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found a user!"
                    },
                    "data": {
                      "type": "object",
                      "allOf": [
                        {
                          "$ref": "#/components/schemas/userGetAndPatchResponse"
                        }
                      ],
                      "required": [
                        "email",
                        "createdAt",
                        "updatedAt"
                      ]
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user/userPhoto": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Add a photo to a user",
        "operationId": "patchUserPhoto",
        "description": "Add a photo to a user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "userPhoto": {
                    "description": "User's photo",
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Photo has been added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Photo has been added successfully"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/photoAddedResponse"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user/updateInfo": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Update info about a user",
        "operationId": "patchUserInfo",
        "description": "Update an info about a user",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "User's name",
                    "type": "string",
                    "example": "John Doe"
                  },
                  "password": {
                    "description": "User's password",
                    "type": "string",
                    "example": "password"
                  },
                  "email": {
                    "description": "Users's email",
                    "type": "string",
                    "example": "test@mail.com"
                  },
                  "gender": {
                    "description": "Users's gender",
                    "type": "string",
                    "enum": [
                      "male",
                      "female"
                    ],
                    "example": "female"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User has been updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 201
                    },
                    "message": {
                      "type": "string",
                      "example": "User has been updated successfully"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/userGetAndPatchResponse"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/user/newDailyWaterIntake": {
      "patch": {
        "tags": [
          "user"
        ],
        "summary": "Update info about a user's daily norm of water",
        "operationId": "patchUserInfoAboutWaterNorm",
        "description": "Update an info about a user norm of water per day",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "dailyWaterIntake": {
                    "description": "User's water norm per day",
                    "type": "string",
                    "example": "15000"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Daily water intake has been successfully updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "status",
                    "message",
                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Daily water intake has been successfully updated"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/dailyWaterIntakeUpdatedResponse"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      }
    },
    "/water": {
      "post": {
        "tags": [
          "water"
        ],
        "summary": "Add a new water consumption record",
        "operationId": "addWaterConsumption",
        "description": "Add a new record of water consumption for the authenticated user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "amount"
                ],
                "properties": {
                  "amount": {
                    "type": "string",
                    "example": "250"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "New water consumption record has been added successfully!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/waterPostAndPatchResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          }
        }
      },
      "get": {
        "tags": [
          "water"
        ],
        "summary": "Get water consumption in percent",
        "operationId": "getDailyWaterConsumption",
        "description": "Retrieve the amount of water consumed from the daily norm in percent and a list of all records of water consumption for the current day",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Retrieved daily water consumption data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/dailyWaterConsumptionResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/water/{id}": {
      "patch": {
        "tags": [
          "water"
        ],
        "summary": "Update an existing water consumption record",
        "operationId": "updateWaterConsumption",
        "description": "Update the amount of water consumed in a specific record.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "66bb2c46d348911e38a4e9d5",
              "description": "The ID of the water consumption record to update."
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "amount"
                ],
                "properties": {
                  "amount": {
                    "type": "string",
                    "example": "250"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Water consumption record has been updated successfully!",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/waterPostAndPatchResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      },
      "delete": {
        "tags": [
          "water"
        ],
        "summary": "Delete a water consumption record",
        "operationId": "deleteWaterConsumption",
        "description": "Remove a water consumption record by ID.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string",
              "example": "66bb2c46d348911e38a4e9d5",
              "description": "The ID of the water consumption record to delete."
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Water consumption record deleted successfully. No content returned."
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/water/{month}/{year}": {
      "get": {
        "tags": [
          "water"
        ],
        "summary": "Get water consumption by month",
        "operationId": "getWaterConsumptionByMonth",
        "description": "Retrieve the water consumption records for each day of a selected month for the authenticated user.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "month",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number",
              "example": 8
            },
            "description": "The month to retrieve records for."
          },
          {
            "name": "year",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number",
              "example": 2024
            },
            "description": "The year to retrieve records for."
          }
        ],
        "responses": {
          "200": {
            "description": "Month period records of water consumption per day for userId: 66d061dc16f361d7057ce7ca",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/waterGetByMonthResponse"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "userCreatedByRegistrationResponse": {
        "type": "object",
        "required": [
          "email",
          "_id",
          "createdAt",
          "updatedAt",
          "photo",
          "name",
          "gender",
          "dailyWaterIntake"
        ],
        "properties": {
          "name": {
            "description": "User's name. Empty by default. Change it by patch method",
            "type": "string"
          },
          "photo": {
            "description": "User's avatar. Empty by default. Change it by patch method",
            "type": "string"
          },
          "gender": {
            "description": "User's gender. Empty by default. Change it by patch method",
            "type": "string"
          },
          "dailyWaterIntake": {
            "description": "User's daily norm of water. 2000 ml by default. Change it by patch method",
            "type": "number"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "test@hmail.com"
          },
          "_id": {
            "description": "User's id",
            "type": "string",
            "example": "66b750163beb29c60d215f8c"
          },
          "createdAt": {
            "description": "When a user has been created at",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-10T11:33:42.181Z"
          },
          "updatedAt": {
            "description": "When a user has been updated at",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-10T11:33:42.181Z"
          }
        }
      },
      "loggedInObjResponse": {
        "type": "object",
        "required": [
          "accessToken"
        ],
        "properties": {
          "accessToken": {
            "description": "Access token",
            "type": "string",
            "example": "65e4decdd286b30065d54af965e4decdd286b30065d54af965e4decdd286b30065d54af9"
          }
        }
      },
      "userGetAndPatchResponse": {
        "type": "object",
        "required": [
          "email",
          "_id",
          "createdAt",
          "updatedAt",
          "name",
          "gender",
          "dailyWaterIntake",
          "photo"
        ],
        "properties": {
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "test@hmail.com"
          },
          "_id": {
            "description": "User's id",
            "type": "string",
            "example": "66b750163beb29c60d215f8c"
          },
          "photo": {
            "description": "User's photo",
            "type": "string",
            "example": "https://cloudinary.com/images/3235235425-23423523"
          },
          "dailyWaterIntake": {
            "description": "Norm of water per day",
            "type": "number",
            "example": 14000
          },
          "gender": {
            "description": "User's gender. Empty by default. Change it by patch method",
            "type": "string",
            "example": "female"
          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Alex Lex"
          },
          "createdAt": {
            "description": "When a user has been created at",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-10T11:33:42.181Z"
          },
          "updatedAt": {
            "description": "When a user has been updated at",
            "type": "string",
            "format": "date-time",
            "example": "2024-08-10T11:33:42.181Z"
          }
        }
      },
      "photoAddedResponse": {
        "type": "object",
        "required": [
          "photoUrl"
        ],
        "properties": {
          "photoUrl": {
            "description": "User's photo",
            "type": "string",
            "example": "https://cloudinary.com/images/3235235425-23423523"
          }
        }
      },
      "dailyWaterIntakeUpdatedResponse": {
        "type": "object",
        "required": [
          "dailyWaterIntake"
        ],
        "properties": {
          "dailyWaterIntake": {
            "description": "User's water norm",
            "type": "number",
            "example": 14000
          }
        }
      },
      "dailyWaterConsumptionResponse": {
        "type": "object",
        "required": [
          "status",
          "message",
          "data"
        ],
        "properties": {
          "status": {
            "type": "integer",
            "example": 200
          },
          "message": {
            "type": "string",
            "example": "Successfully retrieved daily water consumption data"
          },
          "data": {
            "type": "object",
            "required": [
              "persantageOfNorm",
              "dailyRecords",
              "createdAt",
              "updatedAt"
            ]
          }
        }
      },
      "waterPostAndPatchResponse": {
        "type": "object",
        "required": [
          "_id",
          "userId",
          "date",
          "amount",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "_id": {
            "description": "Record's id\"",
            "type": "string",
            "example": "66d4347c5e230c3b03bff562"
          },
          "userId": {
            "description": "Record's user id",
            "type": "string",
            "example": "66d061dc16f361d7057ce7ca"
          },
          "date": {
            "description": "Date and time of adding the record",
            "type": "string",
            "format": "date-time",
            "example": "2024-09-01T09:31:40.823Z"
          },
          "amount": {
            "description": "Amount of water consumed by user added to the record",
            "type": "number",
            "example": 250
          },
          "createdAt": {
            "description": "Date and time of adding the record",
            "type": "string",
            "format": "date-time",
            "example": "2024-09-01T09:31:40.825Z"
          },
          "updatedAt": {
            "description": "Date and time of updating the record",
            "type": "string",
            "format": "date-time",
            "example": "2024-09-01T09:31:40.825Z"
          }
        }
      },
      "waterGetByMonthResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "date",
            "dailyNorm",
            "percentageConsumed",
            "entries"
          ],
          "properties": {
            "date": {
              "type": "string",
              "example": "01, September",
              "description": "The date in `dd, MonthName` format."
            },
            "dailyNorm": {
              "type": "string",
              "example": "2,0 l",
              "description": "The daily water intake norm in liters."
            },
            "percentageConsumed": {
              "type": "string",
              "example": "64%",
              "description": "The percentage of the daily norm consumed."
            },
            "entries": {
              "type": "number",
              "example": 6,
              "description": "The number of water consumption entries."
            }
          }
        }
      }
    },
    "responses": {
      "400": {
        "description": "New password cannot be the same as the old password",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "New password cannot be the same as the old password"
                },
                "data": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "Unauthorized"
                },
                "data": {
                  "type": "object"
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Not found",
